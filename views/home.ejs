<!-- home.ejs -->

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>User Management System</title>
        <!-- Tailwind CSS CDN -->
        <script src="https://cdn.tailwindcss.com"></script>
    </head>

    <body class="font-sans bg-gradient-to-br from-blue-100 to-blue-200 text-gray-800">

        <h2 class="text-center text-blue-700 text-3xl mt-8 uppercase">User Management System</h2>

        <table class="table-auto mx-auto my-4 w-11/12 border-collapse bg-white shadow-lg rounded-lg overflow-hidden">
            <thead>
                <tr>
                    <th class="px-4 py-2 text-white bg-blue-600 text-lg">User Id</th>
                    <th class="px-4 py-2 text-white bg-blue-600 text-lg">User Name</th>
                    <th class="px-4 py-2 text-white bg-blue-600 text-lg">User Email</th>
                    <th class="px-4 py-2 text-white bg-blue-600 text-lg">Age</th>
                    <th class="px-4 py-2 text-white bg-blue-600 text-lg">Delete</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach(element => { %>
                <tr class="hover:bg-blue-50 transform transition-all duration-300">
                    <td class="px-4 py-2 border-t border-b border-gray-200"><%= element.userUniqueId %></td>
                    <td class="px-4 py-2 border-t border-b border-gray-200"><%= element.userName %></td>
                    <td class="px-4 py-2 border-t border-b border-gray-200"><%= element.userEmail %></td>
                    <td class="px-4 py-2 border-t border-b border-gray-200"><%= element.userAge %></td>
                    <td class="px-4 py-2 border-t border-b border-gray-200">
                        <form action="/delete" method="post">
                            <input type="text" style="display: none" name="userUniqueId" value="<%= element.userUniqueId %>" />
                            <button type="submit" class="px-4 py-2 text-white bg-red-600 rounded-lg hover:bg-red-700 transition-all duration-300">Delete</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>

        <h2 class="text-center text-blue-700 text-2xl mt-8"></h2>
        <form action="/" method="post" class="max-w-xl mx-auto p-6 bg-white rounded-lg shadow-lg">
            <div class="text-center text-xl text-blue-600 mb-4">Add New User</div>
            <input type="text" name="userUniqueId" placeholder="User Unique Id" class="w-full mb-4 p-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500" />
            <input type="text" name="userName" placeholder="User Name" class="w-full mb-4 p-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500" />
            <input type="text" name="userEmail" placeholder="User Email" class="w-full mb-4 p-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500" />
            <input type="text" name="userAge" placeholder="User Age" class="w-full mb-4 p-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500" />
            <button type="submit" class="w-full py-3 text-white bg-blue-600 rounded-lg hover:bg-blue-700 transition-all duration-300">Submit</button>
        </form>

        <h2 class="text-center text-blue-700 text-2xl mt-8"></h2>
        <form action="/update" method="post" class="max-w-xl mx-auto p-6 bg-white rounded-lg shadow-lg">
            <div class="text-center text-xl text-blue-600 mb-4">Update Existing User</div>
            <input type="text" name="userUniqueId" placeholder="User Unique Id" class="w-full mb-4 p-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500" />
            <input type="text" name="userName" placeholder="User Name" class="w-full mb-4 p-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500" />
            <input type="text" name="userEmail" placeholder="User Email" class="w-full mb-4 p-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500" />
            <input type="text" name="userAge" placeholder="User Age" class="w-full mb-4 p-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500" />
            <button type="submit" class="w-full py-3 text-white bg-blue-600 rounded-lg hover:bg-blue-700 transition-all duration-300">Update</button>
        </form>

        <footer class="text-center text-white bg-blue-600 py-4 mt-8">
            &copy; 2025 User Management System. All rights reserved.
        </footer>
    </body>
</html>
